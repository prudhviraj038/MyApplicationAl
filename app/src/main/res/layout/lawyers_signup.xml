<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fde7d3">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:id="@+id/imageView13"
                    android:layout_weight="1"
                    android:background="#fde7d3"
                    android:src="@drawable/logo"
                    android:layout_marginTop="20dp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:layout_height="match_parent"
                android:layout_margin="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textPersonName"
                    android:ems="10"
                    android:id="@+id/first_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:hint="First Name"
                    android:textColorHighlight="#c69a32" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textPersonName"
                    android:ems="10"
                    android:id="@+id/last_name"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textColorLink="#6D351A"
                    android:hint="Last Name"
                    android:textColorHighlight="#c69a32" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textPersonName"
                    android:ems="10"
                    android:id="@+id/user_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:textColorLink="#6D351A"
                    android:textSize="12sp"
                    android:hint="User Name"
                    android:textColorHighlight="#c69a32" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/pass"
                    android:hint="Password"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColorHighlight="#c69a32" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textEmailAddress|textPersonName"
                    android:ems="10"
                    android:id="@+id/email_add"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textColorLink="#6D351A"
                    android:hint="Email"
                    android:textColorHighlight="#c69a32" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/phone"
                    android:inputType="number|phone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textColorLink="#6D351A"
                    android:hint="Phone Number"
                    android:textColorHighlight="#c69a32" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/area_btn"
                    android:hint="Areas"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:padding="8dp" />


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_margin="15dp">

                <TextView
                    android:text="Register"
                    android:layout_height="match_parent"
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:background="#6d5739"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="14sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:layout_weight="0.40"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>